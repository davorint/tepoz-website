{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "env": {
    "NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN": "@mapbox-token",
    "NEXT_PUBLIC_GA_MEASUREMENT_ID": "@ga-measurement-id",
    "NEXT_PUBLIC_SENTRY_DSN": "@sentry-dsn",
    "NEXT_PUBLIC_SITE_URL": "@site-url",
    "DATABASE_URL": "@database-url",
    "AUTH_SECRET": "@auth-secret",
    "AUTH_URL": "@auth-url",
    "AUTH_GOOGLE_ID": "@google-oauth-id",
    "AUTH_GOOGLE_SECRET": "@google-oauth-secret",
    "RESEND_API_KEY": "@resend-api-key"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/es/hospedaje/:path*",
      "destination": "/es/stay/:path*",
      "permanent": true
    },
    {
      "source": "/en/hospedaje/:path*",
      "destination": "/en/stay/:path*",
      "permanent": true
    },
    {
      "source": "/es/comer/:path*",
      "destination": "/es/food-drink/:path*",
      "permanent": true
    },
    {
      "source": "/en/comer/:path*",
      "destination": "/en/food-drink/:path*",
      "permanent": true
    },
    {
      "source": "/es/experiencias/:path*",
      "destination": "/es/experience/:path*",
      "permanent": true
    },
    {
      "source": "/en/experiencias/:path*",
      "destination": "/en/experience/:path*",
      "permanent": true
    }
  ]
}
